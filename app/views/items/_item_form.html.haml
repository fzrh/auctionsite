= form_for @item do |f|
  - if @item.errors.any?
    %h2
      = pluralize(@item.errors.count, "error")
      prohibited this item from being saved:
    %ul
      - @item.errors.full_messages.each do |msg|
        %li #{msg}

  .form-group
    = f.label :title
    = f.text_field :title, placeholder: 'item title', class: 'form-control'
  .form-group
    = f.label :description
    = f.text_field :description, placeholder: 'item description', class: 'form-control'
  .form-group
    = f.label :base_price
    = f.text_field :base_price, class: 'form-control'
  .form-group
    = f.label :end_date
    = f.datetime_select :end_date, default: Time.now + 1.day, class: 'form-control'
  = f.submit class: 'btn btn-success'
  = link_to 'Back', root_path, class: 'btn btn-default'
